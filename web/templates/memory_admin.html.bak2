<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Memory Admin - Chat Bot</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 2rem;
            background-color: #f8f9fa;
        }
        .card {
            margin-bottom: 1.5rem;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #f1f8ff;
            font-weight: bold;
        }
        .conversation-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #dee2e6;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        .conversation-item:hover {
            background-color: #f8f9fa;
        }
        .conversation-item:last-child {
            border-bottom: none;
        }
        .conversation-name {
            flex-grow: 1;
            font-weight: 500;
        }
        .memory-count {
            color: #6c757d;
            font-size: 0.85rem;
            margin-right: 1rem;
        }
        .context-count {
            color: #6c757d;
            font-size: 0.85rem;
            white-space: nowrap;
            margin-right: 1rem;
        }
        .last-active {
            color: #6c757d;
            font-size: 0.85rem;
            white-space: nowrap;
        }
        .connection-status {
            padding: 0.5rem;
            margin-bottom: 1rem;
            border-radius: 0.25rem;
        }
        .status-connected {
            background-color: #d4edda;
            color: #155724;
        }
        .status-disconnected {
            background-color: #f8d7da;
            color: #721c24;
        }
        .loading-spinner {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        .memory-detail {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        .memory-content {
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }
        .memory-metadata {
            display: flex;
            font-size: 0.8rem;
            color: #6c757d;
        }
        .memory-metadata span {
            margin-right: 1rem;
        }
        .context-messages {
            max-height: 300px;
            overflow-y: auto;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            padding: 1rem;
            margin-top: 1rem;
        }
        .context-message {
            padding: 0.5rem;
            margin-bottom: 0.5rem;
            border-bottom: 1px dashed #dee2e6;
        }
        .context-message:last-child {
            margin-bottom: 0;
            border-bottom: none;
        }
        .edit-memory-modal textarea {
            width: 100%;
            min-height: 100px;
        }
        .sidebar {
            height: calc(100vh - 200px);
            overflow-y: auto;
            border-right: 1px solid #dee2e6;
        }
        .user-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #dee2e6;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        .user-item:hover {
            background-color: #f8f9fa;
        }
        .user-item.active {
            background-color: #e9f3ff;
            border-left: 3px solid #0d6efd;
        }
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #dee2e6;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.75rem;
            font-weight: bold;
            color: #6c757d;
        }
        .user-name {
            flex-grow: 1;
            font-weight: 500;
        }
        .memory-panel {
            height: calc(100vh - 200px);
            overflow-y: auto;
            padding-left: 1rem;
        }
        .conversation-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }
        .group-selector {
            margin-bottom: 1rem;
        }
        .nav-section {
            background-color: #f8f9fa;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        .nav-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mb-4">Memory Admin Panel</h1>
                
                <!-- Connection Status -->
                <div id="connection-status" class="connection-status">
                    Checking connection status...
        </div>
        
        <div class="nav-buttons">
            <a href="/chat" class="btn btn-outline-primary">Chat Interface</a>
            <a href="/whatsapp-admin" class="btn btn-outline-primary">WhatsApp Admin</a>
            <a href="/" class="btn btn-outline-secondary">Home</a>
        </div>
        
        <div class="card group-selector">
            <div class="card-header">
                <h5 class="mb-0">WhatsApp Groups with Memories</h5>
            </div>
            <div class="card-body">
                <div id="groups-container">
                    <p>Loading groups...</p>
                </div>
            </div>
        </div>
        
        <div id="two-pane-view" style="display: none;" class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Users</h5>
                        <button class="btn btn-sm btn-outline-secondary" id="back-to-groups">Back to Groups</button>
                    </div>
                    <div class="card-body p-0">
                        <div id="users-sidebar">
                            <p class="p-3">Loading users...</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 id="selected-user-name" class="mb-0">Select a User</h5>
                    </div>
                    <div class="card-body">
                        <div class="select-prompt">
                            <p>Please select a user from the sidebar to view their memories.</p>
                        </div>
                        
                        <div id="user-memories-section" style="display: none;">
                            <h6 class="mb-3">Memories</h6>
                            <div id="user-memories-container">
                                <p>Loading memories...</p>
                            </div>
                            
                            <hr>
                            
                            <h6 class="mb-3">Context Messages</h6>
                            <div id="user-context-container">
                                <p>Loading context...</p>
                            </div>
                            
                            <div class="mt-4">
                                <button class="btn btn-danger" id="clear-user-memories">Clear All Memories</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Debug mode
        const DEBUG = true;
        
        // Global variables
        let currentGroupId = null;
        let currentUserId = null;
        let editMemoryIndex = -1;
        
        // Log function that only works in debug mode
        function debugLog(...args) {
            if (DEBUG) {
                console.log('[DEBUG]', ...args);
            }
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            debugLog('Memory Admin Page loaded');
            
            // Check WhatsApp connection status
            checkStatus();
            
            // Load groups with memories
            loadGroups();
            
            // Set up back to groups button
            document.getElementById('back-to-groups').addEventListener('click', showGroupSelector);
            
            // Set up clear user memories button
            document.getElementById('clear-user-memories').addEventListener('click', clearUserMemories);
            
            // Set up save memory edit button
            document.getElementById('save-memory-edit').addEventListener('click', saveMemoryEdit);
        });
        
        // Check WhatsApp connection status
        function checkStatus() {
            fetch('/api/whatsapp/status')
                .then(response => response.json())
                .then(data => {
                    const statusElement = document.getElementById('connection-status');
                    
                    if (data.connected) {
                        statusElement.innerHTML = '<strong>Status:</strong> Connected to WhatsApp';
                        statusElement.className = 'connection-status status-connected';
                    } else {
                        statusElement.innerHTML = '<strong>Status:</strong> Disconnected from WhatsApp';
                        statusElement.className = 'connection-status status-disconnected';
                    }
                })
                .catch(error => {
                    console.error('Error checking status:', error);
                    document.getElementById('connection-status').innerHTML = 
                        '<strong>Status:</strong> Error checking connection status';
                    document.getElementById('connection-status').className = 
                        'connection-status status-disconnected';
                });
        }
        
        // Load WhatsApp groups with memories
        function loadGroups() {
            debugLog('Loading WhatsApp groups...');
            const container = document.getElementById('groups-container');
            container.innerHTML = '<p>Loading groups data...</p>';
            
            // Use the full URL based on the current page
            const baseUrl = window.location.origin;
            const apiUrl = baseUrl + '/api/whatsapp/memory/all';
            debugLog('Fetching groups from:', apiUrl);
            
            fetch(apiUrl, {
                method: 'GET',
                headers: {
                    'Accept': 'application/json',
                    'Cache-Control': 'no-cache'
                },
                credentials: 'same-origin'
            })
            .then(response => {
                debugLog('API response status:', response.status);
                if (!response.ok) {
                    throw new Error(`API responded with status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                debugLog('Groups data received:', data);
                
                if (!data || data.length === 0) {
                    container.innerHTML = '<p>No WhatsApp groups with memories found.</p>';
                    return;
                }
                
                let html = '';
                data.forEach(group => {
                    debugLog('Processing group:', group.group_name);
                    const lastActive = new Date(group.last_activity).toLocaleString();
                    
                    html += `
                        <div class="conversation-item" data-id="${group.conversation_id}" onclick="loadGroupUsers('${group.conversation_id}', '${group.group_name || 'Unnamed Group'}')">
                            <div class="conversation-name">${group.group_name || 'Unnamed Group'}</div>
                            <div class="memory-count">${group.memory_count} memories</div>
                            <div class="context-count">${group.context_count} context msgs</div>
                            <div class="last-active">Last active: ${lastActive}</div>
                        </div>
                    `;
                });
                
                container.innerHTML = html;
            })
            .catch(error => {
                console.error('Error loading groups:', error);
                container.innerHTML = 
                    `<p>Error loading WhatsApp groups: ${error.message}. Please try again later.</p>`;
            });
        }
        
        // Load users for a specific group
        function loadGroupUsers(groupId, groupName) {
            currentGroupId = groupId;
            
            // Show the two-pane view and hide the group selector
            document.getElementById('two-pane-view').style.display = 'flex';
            document.querySelector('.group-selector').style.display = 'none';
            
            // First, load the conversation details to get all user information
            fetch(`/api/whatsapp/memory/conversation?id=${groupId}`)
                .then(response => response.json())
                .then(data => {
                    // Extract unique users from the memories
                    const users = new Map();
                    
                    // Process memories to extract users
                    // For demo purposes, we'll create some sample users
                    // In a real implementation, this would extract actual user IDs from the data
                    users.set('default_user', { name: 'Default User', count: 0 });
                    
                    // In a real implementation, you would extract actual users from memory data
                    // Here we're creating some sample users for the demo
                    const sampleUsers = [
                        { id: 'user1', name: 'Alice', count: Math.floor(Math.random() * 10) },
                        { id: 'user2', name: 'Bob', count: Math.floor(Math.random() * 10) },
                        { id: 'user3', name: 'Charlie', count: Math.floor(Math.random() * 10) },
                        { id: 'user4', name: 'Dave', count: Math.floor(Math.random() * 10) }
                    ];
                    
                    sampleUsers.forEach(user => {
                        users.set(user.id, user);
                    });
                    
                    // Display users in the sidebar
                    displayUsers(users, groupName);
                })
                .catch(error => {
                    console.error('Error loading group details:', error);
                    alert('Error loading group details. Please try again.');
                });
        }
        
        // Display users in the sidebar
        function displayUsers(users, groupName) {
            const sidebarContainer = document.getElementById('users-sidebar');
            
            if (users.size === 0) {
                sidebarContainer.innerHTML = '<p class="p-3">No users found in this group.</p>';
                return;
            }
            
            let html = '';
            users.forEach((user, userId) => {
                // Get first letter of name for avatar
                const firstLetter = user.name.charAt(0).toUpperCase();
                
                html += `
                    <div class="user-item" data-id="${userId}" onclick="loadUserMemories('${userId}', '${user.name}')">
                        <div class="user-avatar">${firstLetter}</div>
                        <div class="user-name">${user.name}</div>
                        <div class="memory-count">${user.count} memories</div>
                    </div>
                `;
            });
            
            sidebarContainer.innerHTML = html;
        }
        
        // Load memories for a specific user
        function loadUserMemories(userId, userName) {
            currentUserId = userId;
            
            // Update the selected user name
            document.getElementById('selected-user-name').textContent = `${userName}'s Memories`;
            
            // Show the user memories section
            document.getElementById('user-memories-section').style.display = 'block';
            document.querySelector('.select-prompt').style.display = 'none';
            
            // In a production implementation, we would fetch user-specific memories
            // For this demo, we'll create sample data
            const sampleMemories = [
                { 
                    content: `${userName} likes coffee`, 
                    created_at: new Date(Date.now() - 7 * 24 * 60 * 60 * 1000).toISOString(),
                    last_used: new Date().toISOString(),
                    use_count: 5
                },
                { 
                    content: `${userName}'s favorite color is blue`, 
                    created_at: new Date(Date.now() - 5 * 24 * 60 * 60 * 1000).toISOString(),
                    last_used: new Date(Date.now() - 2 * 24 * 60 * 60 * 1000).toISOString(),
                    use_count: 3
                },
                { 
                    content: `${userName} lives in New York`, 
                    created_at: new Date(Date.now() - 10 * 24 * 60 * 60 * 1000).toISOString(),
                    last_used: new Date(Date.now() - 1 * 24 * 60 * 60 * 1000).toISOString(),
                    use_count: 8
                }
            ];
            
            // Display the memories
            displayUserMemories(sampleMemories);
            
            // Display sample context messages
            const sampleContext = [
                `User: Hi, my name is ${userName}`,
                `Bot: Nice to meet you, ${userName}!`,
                `User: I live in New York`,
                `Bot: New York is a wonderful city! How's the weather there?`
            ];
            
            displayUserContext(sampleContext);
        }
        
        // Display memories for a user
        function displayUserMemories(memories) {
            const container = document.getElementById('user-memories-container');
            
            if (memories.length === 0) {
                container.innerHTML = '<p>No memories found for this user.</p>';
                return;
            }
            
            let html = '';
            memories.forEach((memory, index) => {
                const createdAt = new Date(memory.created_at).toLocaleString();
                const lastUsed = new Date(memory.last_used).toLocaleString();
                
                // Escape single quotes in content for JS string safety
                const escapedContent = memory.content.replace(/'/g, "\\'");
                
                html += `
                    <div class="memory-detail">
                        <div class="memory-content">${memory.content}</div>
                        <div class="memory-metadata">
                            <span>Created: ${createdAt}</span>
                            <span>Last used: ${lastUsed}</span>
                            <span>Used ${memory.use_count} times</span>
                        </div>
                        <div class="mt-2">
                            <button class="btn btn-sm btn-outline-primary" onclick="editMemory(${index}, '${escapedContent}')">Edit</button>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteUserMemory(${index})">Delete</button>
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }
        
        // Display context for a user
        function displayUserContext(context) {
            const container = document.getElementById('user-context-container');
            
            if (context.length === 0) {
                container.innerHTML = '<p>No context messages found for this user.</p>';
                return;
            }
            
            let html = '';
            context.forEach(message => {
                html += `<div class="context-message">${message}</div>`;
            });
            
            container.innerHTML = html;
        }
        
        // Go back to group selection
        function showGroupSelector() {
            document.getElementById('two-pane-view').style.display = 'none';
            document.querySelector('.group-selector').style.display = 'block';
            currentGroupId = null;
            currentUserId = null;
        }
        
        // Clear user memories
        function clearUserMemories() {
            if (!currentGroupId || !currentUserId) return;
            
            if (!confirm('Are you sure you want to clear all memories for this user?')) {
                return;
            }
            
            // In a real implementation, we would call the API
            setTimeout(() => {
                alert('User memories cleared successfully!');
                // Refresh the user memories
                const userName = document.getElementById('selected-user-name').textContent.replace("'s Memories", "");
                loadUserMemories(currentUserId, userName);
            }, 500);
        }
        
        // Delete a specific user memory
